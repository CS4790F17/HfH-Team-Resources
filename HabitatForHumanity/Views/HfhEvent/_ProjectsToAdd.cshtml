@model IEnumerable<HabitatForHumanity.ViewModels.EventAddRemoveProjectVM>
<div>Select projects to add to event</div>


   

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @foreach (var item in Model)
        {
            @Html.HiddenFor(modelItem => item.hfhEventId)
            @Html.HiddenFor(modelItem => item.projectId)
            <div class="form-group">
                @Html.LabelFor(modelItem => item.isSelected, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(modelItem => item.isSelected, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(modelItem => item.isSelected, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(modelItem => item.projectName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(modelItem => item.projectName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(modelItem => item.projectName, "", new { @class = "text-danger" })
                </div>
            </div>
            @*<tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.isSelected)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.projectName)
                    </td>

                </tr>*@
        }

      
         
       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}



