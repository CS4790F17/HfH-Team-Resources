@model HabitatForHumanity.Models.Organization

@using (Html.BeginForm("EditOrganization", "Admin", FormMethod.Post, new { id = "editOrganizationForm" }))
{
    @Html.AntiForgeryToken()
   
    <div class="form-horizontal">
                    
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.status)

         <div class="form-group">
              @Html.LabelFor(x => x.name, htmlAttributes: new { @class = "control-label col-md-4" }):        
            <div class="col-md-8">
                @Html.EditorFor(x => x.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.name, "", new { @class = "text-danger" })
            </div>
         </div>
            <div class="form-group">
                @Html.LabelFor(model => model.comments, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.TextAreaFor(model => model.comments, 10, 40, new { htmlAttributes = new { @class = "form-control", style = "width: 100%; max-width: 100%;" } })
                    @Html.ValidationMessageFor(model => model.comments, "", new { @class = "text-danger" })
                </div>
            </div>
     </div>
}
