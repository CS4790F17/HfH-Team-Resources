<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Habitat For Humanity </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
 
    @Scripts.Render("~/bundles/jquery")
    
</head>
<body>
    @*<header>
        <img src="~/Images/HFHLogo.jpg" class="BannerLogo" style="width:30%; margin-top:15px"/>
    </header>*@
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @{
                        if (Session["Username"] != null && Session["isAdmin"] != null && Session["isAdmin"].Equals("isAdmin"))
                        {
                            <li>@Html.ActionLink("Volunteers", "Volunteers", "Admin")</li>
                            <li>@Html.ActionLink("Time Cards", "TimeCards", "Admin")</li>
                            <li>@Html.ActionLink("Projects", "Projects", "Admin")</li>
                            <li>@Html.ActionLink("Organizations", "Organizations", "Admin")</li>
                            <li>@Html.ActionLink("Log Out", "Logout", "User")</li>
                        }
                        else if (Session["Username"] != null)
                        {
                            <li>@Html.ActionLink("My Account", "UserProfile", "User")</li>
                            <li>@Html.ActionLink("Log Out", "Logout", "User")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Create Account", "VolunteerSignup", "User")</li>
                            <li>@Html.ActionLink("Log In", "Login", "User")</li>
                        }
                    }

                </ul>
            </div>
        </div>
    </div>
   
    <div class="container body-content">
        @{
            if (ViewBag.status != null)
            {
                <div class="alert alert-danger text-center" role="alert" style="margin-top: 15px">
                    <h3>@ViewBag.status</h3>
                </div>
            }
        }
        <div class="row">
            <div class="col-md-3 col-md-offset-4"><img src="~/Images/HFHLogo.jpg" style="margin-top:15px" /></div>
        </div>

        @RenderBody()
        <hr />
        
        <footer>
            <p>&copy; @DateTime.Now.Year - Habitat for Humanity of Davis and Weber Counties</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/Highcharts-4.0.1/js/highcharts.js"></script>  
    @RenderSection("scripts", required: false)
</body>
</html>
